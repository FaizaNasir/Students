<div class="row">
    <label style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        Date :
    </label>
    <p style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        @Model.CreatedAt.ToString("dd/MM/yyyy")
    </p>
</div>

<div class="row">
    <label style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        Student :
    </label>
    <p style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        @Html.DisplayFor(model => model.FirstName +" "+ model.LastName)
    </p>
</div>

<div class="row">
    <label style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        Parent Name:
    </label>
    <p style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        @Html.DisplayFor(model => model.Parent.FirstName +" "+ model.Parent.LastName )
    </p>
</div>

<div class="row">
    <label style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        Parent Contact :
    </label>
    <p style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        @Html.DisplayFor(model => model.Parent.Phone)
    </p>
</div>
<div class="row">
    <label style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        Course Name :
    </label>
    <p style="font-size:medium;" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        @Html.DisplayFor(model => model.CourseName)
    </p>
</div>